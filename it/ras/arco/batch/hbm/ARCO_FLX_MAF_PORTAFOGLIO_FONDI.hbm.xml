<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


 <class name="it.ras.arco.batch.bean.FlxPortafoglioFondi" rowid="rowid" table="FLX_MAF_PORTAFOGLIO_FONDI">
	
	<id name="flxId" column="FLX_ID" type="integer">
		<generator class="sequence">
			<param name="sequence">FLX_MAF_PORTAFOGLIO_FONDI_SEQ</param>
		</generator>
	</id>


	<!--	*******	CAMPI PROPRI *******		-->
	<property name="codiceMAF" 			column="CODICE_MAF"	type="string" length="64"  />
	<property name="dataComposizione" 		column="DATA_COMPOSIZIONE" type="string" length="64"  />
	<property name="percentualeLiquidita" 		column="PERC_LIQUIDITA"	type="string" length="64"  />
	<property name="percentualeDebito" 		column="PERC_DEBITO"	type="string" length="64"  />
	<property name="percentualeAzioni" 		column="PERC_AZIONI"	type="string" length="64"  />
	<property name="percentualeAltro" 		column="PERC_ALTRO"	type="string" length="64"  />
	<property name="italianEquity" 			column="ITA_EQUITY"	type="string" length="64"  />
	<property name="foreignEquity" 			column="FOREIGN_EQUITY"	type="string" length="64"  />
	<property name="italianBond" 			column="ITA_BOND"	type="string" length="64"  />
	<property name="foreignBond" 			column="FOREIGN_BOND"	type="string" length="64"  />
	<property name="convertibleBond" 		column="CONV_BOND"	type="string" length="64"  />
	<property name="governmentBond" 		column="GOV_BOND"	type="string" length="64"  />
	<property name="raccoltaNetta" 			column="RACCOLTA_NETTA"	type="string" length="64"  />
	<property name="patrimonioNetto" 		column="PATRIMONIO_NETTO" type="string" length="64"  />



	<!--	*******	CAMPI STANDARD	*******		-->
	<property name="statoElaborazione" 		column="STATO_ELAB_B" 		type="string" length="2"  />
	<property name="istanza" 	   		column="ISTANZA_S" 	 	type="string" length="1"  />
	<property name="dataCaricamento"   		column="DATA_CARICAMENTO_D" 	type="timestamp"  />


 </class>
 
 
 <!--	*******		CURSORE		********	-->
 <query name="MAF_PORTAFOGLIO_FONDI_SQL">
 	from it.ras.arco.batch.bean.FlxPortafoglioFondi flusso 
 	where flusso.statoElaborazione ='D'
  	order by flusso.codiceMAF
 </query>



</hibernate-mapping>
