<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="it.ras.arco.batch.bean.FlxEasyPlan" rowid="rowid"
  table="FLX_EASY_PLAN" >
  <id name="flxId" column="FLX_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">FLX_EASY_PLAN_SEQ</param>
   </generator>
  </id>
  	<property name="tipoRecord"                     column="TIPO_RECORD"                    type="string"   />
	<property name="numDispArco"                    column="NUM_DISP_ARCO"                  type="string"   />
	<property name="tipoOperazione"                 column="TIPO_OPERAZIONE"                type="string" length="1"  />
	<property name="numeroPosizione"                column="NUMERO_POSIZIONE"               type="string" length="11"  />
	<property name="numeroOperazione"               column="NUMERO_OPERAZIONE"              type="string" length="7"  />
	<property name="importoPrelievo"                column="IMPORTO_PRELIEVO"               type="double"  />
	<property name="dataPrelievo"                   column="DATA_PRELIEVO"              	type="timestamp"  />
	<property name="periodicitaTrasferimento"       column="PERIOD_PREL"     				type="string" length="2"  />
	<property name="flagFineMese"                   column="FLAG_FINE_MESE"                 type="string" length="1"  />
	<property name="codiceRichiedenteRam"           column="CODICE_RICHIEDENTE_RAM"         type="string" length="7"  />
	<property name="numeroPrelievi"                 column="NUMERO_PRELIEVI"                type="integer"  />
	<property name="tabellaPosizioni"               column="TABELLA_POSIZIONI"              type="string" length="275"  />
	<property name="importoInEntrata"               column="IMPORTO_IN_ENTRATA"             type="string" length="225"  />
	<property name="importoSplit"               	column="IMPORTO_SPLIT"             		type="double" />	
	<property name="statoElab"                      column="STATO_ELAB_B"                   type="string" length="2"  />
	<property name="istanza"                        column="ISTANZA_S"                      type="string" length="1"  />
	<property name="dataCaricamento"                column="DATA_CARICAMENTO_S"             type="timestamp"  />
	<property name="descrizioneErrore" 				column="DESCRIZIONE_ERRORE_S" 			type="string" length="300"/>
	<property name="dataElaborazione" 				column="DATA_ELAB_D"					type="timestamp"/>  	

 </class>
 <query name="EASY_PLAN">from it.ras.arco.batch.bean.FlxEasyPlan pc where pc.statoElab ='D' order by pc.codiceRichiedenteRam,pc.numDispArco</query>
</hibernate-mapping>
