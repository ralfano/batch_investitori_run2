<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


 <class name="it.ras.arco.batch.bean.FlxIndici" rowid="rowid" table="FLX_MAF_INDICI">
	
	<id name="flxId" column="FLX_ID" type="integer">
		<generator class="sequence">
			<param name="sequence">FLX_MAF_INDICI_SEQ</param>
		</generator>
	</id>


	<!--	*******	CAMPI PROPRI *******		-->
	<property name="codiceMAF" 			column="CODICE_MAF"	type="string" length="64"  />
	<property name="benchmark" 			column="BENCHMARK"	type="string" length="64"  />
	<property name="codNazione" 			column="NAZIONE"	type="string" length="64"  />
	<property name="areaGeografica" 		column="AREA_GEO"	type="string" length="64"  />
	<property name="codSettoreIndustriale" 		column="SETT_INDUSTR"	type="string" length="64"  />
	<property name="valuta" 			column="VALUTA"		type="string" length="64"  />



	<!--	*******	CAMPI STANDARD	*******		-->
	<property name="statoElaborazione" 		column="STATO_ELAB_B" 		type="string" length="2"  />
	<property name="istanza" 	   		column="ISTANZA_S" 	 	type="string" length="1"  />
	<property name="dataCaricamento"   		column="DATA_CARICAMENTO_D" 	type="timestamp"  />


 </class>
 
 
 <!--	*******		CURSORE		********	-->
 <query name="MAF_INDICI_SQL">
 	from it.ras.arco.batch.bean.FlxIndici flusso 
 	where flusso.statoElaborazione ='D'
  	order by flusso.codiceMAF
 </query>



</hibernate-mapping>
