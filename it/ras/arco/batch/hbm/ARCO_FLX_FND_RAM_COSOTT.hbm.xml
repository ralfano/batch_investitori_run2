<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="it.ras.arco.batch.bean.FlxFndRamCosott" rowid="rowid" table="FLX_FND_RAM_COSOTT" >
  <id name="flxId" column="FLX_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">FLX_FND_RAM_COSOTT_SEQ</param>
   </generator>
  </id>
  <property name="dtulm" type="date" column="DATA_ULTIMA_MANUTENZIONE"/>
  <property name="utent" type="string" column="UTENTE_ULTIMA_MANUTENZIONE" length="4"/>
  <property name="codsq" type="string" column="CODICE_SQUADRA" length="7"/>
  <property name="clcli" type="string" column="CODICE_CLIENTE" length="7"/>
  <property name="tpana" type="integer" column="TIPO_COSOTTOSCRITTORE"/>
  <property name="tipsq" type="string" column="CODICE_CONVENZIONE" length="2"/>
  <property name="persp" type="integer" column="PERCENTUALE_COMMISSIONI"/>
  <property name="dtpco" type="date" column="DATA_ULTIMA_VARIAZ_PERCENT"/>
  <property name="statoElaborazione" type="string" column="STATO_ELAB_B" length="2"/>
  <property name="istanza" type="string" column="ISTANZA_S" length="2"/>
  <property name="dataCaricamento" type="date" column="DATA_CARICAMENTO_S"/>

  <property name="descrizioneErrore" type="string" column="DESCRIZIONE_ERRORE_S" length="100"/>
  <property name="dataElaborazione" type="timestamp" column="DATA_ELAB_D"/>
 </class>
 <query name="QUERY_COSOTT_SQL">from it.ras.arco.batch.bean.FlxFndRamCosott c where c.statoElaborazione='D' order by c.codsq</query>
</hibernate-mapping>
