<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="it.ras.arco.batch.bean.FlxSecConvenzione" rowid="rowid" table="FLX_SEC_CONVENZIONE">
  <id name="flxId" column="FLX_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">FLX_SEC_CONVENZIONE_SEQ</param>
   </generator>
  </id>
 

<property name="codiceProdotto"                 column="CODICE_PRODOTTO"                type="string" length="15"  />
<property name="descrizioneConvenzione"         column="DESCRIZIONE_CONVENZIONE_S"      type="string" length="100"  />
<property name="dataInizioValidita"             column="DATA_INIZIO_VALIDITA_D"         type="date"  />
<property name="dataFineValidita"               column="DATA_FINE_VALIDITA_D"           type="date"  />
<property name="statoElab"                      column="STATO_ELAB_B"                   type="string"  />
<property name="istanza"                        column="ISTANZA_S"                      type="string"  />
<property name="dataCaricamento"                column="DATA_CARICAMENTO_S"             type="date"  />
<property name="tipoProdotto"                   column="TIPO_PRODOTTO"                  type="string" length="4"  />
<property name="codiceConvenzione"              column="CODICE_CONVENZIONE"             type="string" length="10"  />
<property name="descrizioneProdotto"            column="DESCRIZIONE_PRODOTTO_S"         type="string" length="100"  />
<property name="codiceFascia"                   column="CODICE_FASCIA"                  type="string" length="2"  />
<property name="descrizioneFascia"              column="DESCRIZIONE_FASCIA"             type="string" length="125"  />
<property name="flagTipoConvenzione"            column="FLAG_TIPO_CONVENZIONE_C"        type="string" length="1"  />
<property name="dataInizioCommerciale"          column="DATA_INIZIO_COMMERCIALE_D"      type="date"  />
<property name="dataFineCommerciale"            column="DATA_FINE_COMMERCIALE_D"        type="date"  />
<property name="descrizioneErrore"  column="DESCRIZIONE_ERRORE_S" type="string" length="100"  />
  <property name="dataElab" column="DATA_ELAB_D" type="timestamp"  />
 

 </class>
 <query name="SEC_CONVENZIONE">from
it.ras.arco.batch.bean.FlxSecConvenzione pc where pc.statoElab='D' order by pc.codiceProdotto,pc.codiceConvenzione
</query>


</hibernate-mapping>
