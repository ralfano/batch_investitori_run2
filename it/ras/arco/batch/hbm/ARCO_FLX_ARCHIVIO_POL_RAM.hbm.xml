<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

 <class name="it.ras.arco.batch.bean.FlxArchivioPolRam" rowid="rowid"
  table="FLX_ARCHIVIO_POL_RAM" where="GSTD_ESIST_B='S'">
  <id name="flxId" column="FLX_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">FLX_ARCHIVIO_POL_RAM_SEQ</param>
   </generator>
  </id>
                   
<property name="codiceFondo"                    column="CODICE_FONDO"                   type="string" length="2"  />
<property name="numeroMandato"                  column="NUMERO_MANDATO"                 type="string" length="11"  />
<property name="codiceIntestatarioRam"          column="CODICE_INTESTATARIO_RAM"        type="string" length="7"  />
<property name="codiceRamo"                     column="CODICE_RAMO"                    type="string" length="3"  />
<property name="codiceCompagnia"                column="CODICE_COMPAGNIA"               type="string" length="2"  />
<property name="numeroPolizza"                  column="NUMERO_POLIZZA"                 type="string" length="11"  />
<property name="tipoOperazione"                 column="TIPO_OPERAZIONE"                type="string" length="3"  />
<property name="dataAttivazione"                column="DATA_ATTIVAZIONE"               type="date"  />
<property name="statoElab"                      column="STATO_ELAB_B"                   type="string" length="2"  />
<property name="istanza"                        column="ISTANZA_S"                      type="string" length="1"  />
<property name="dataCaricamento"                column="DATA_CARICAMENTO_S"             type="date"  />
       

 </class>
</hibernate-mapping>
