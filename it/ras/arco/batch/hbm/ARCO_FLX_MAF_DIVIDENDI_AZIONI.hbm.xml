<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


 <class name="it.ras.arco.batch.bean.FlxDividendiAzioni" rowid="rowid" table="FLX_MAF_DIVIDENDI_AZIONI">
	
	<id name="flxId" column="FLX_ID" type="integer">
		<generator class="sequence">
			<param name="sequence">FLX_MAF_DIVIDENDI_AZIONI_SEQ</param>
		</generator>
	</id>


	<!--	*******	CAMPI PROPRI *******		-->
	<property name="codiceMAF" 			column="CODICE_MAF"	type="string" length="50"  />
	<property name="dataStacco" 			column="DATA_STACCO"	type="string" length="32"  />
	<property name="dataPagamento" 			column="DATA_PAGAMENTO"	type="string" length="32"  />
	<property name="tipo" 				column="TIPO"		type="string" length="100"  />
	<property name="valore" 			column="VALORE"		type="double" />
	<property name="divisa" 			column="DIVISA"		type="string" length="32"  />



	<!--	*******	CAMPI STANDARD	*******		-->
	<property name="statoElaborazione" 		column="STATO_ELAB_B" 		type="string" length="2"  />
	<property name="istanza" 	   		column="ISTANZA_S" 	 	type="string" length="1"  />
	<property name="dataCaricamento"   		column="DATA_CARICAMENTO_D" 	type="timestamp"  />


 </class>
 
 
 <!--	*******		CURSORE		********	-->
 <query name="MAF_DIVIDENDI_AZIONI_SQL">
 	from it.ras.arco.batch.bean.FlxDividendiAzioni flusso 
 	where flusso.statoElaborazione ='D'
  	order by flusso.codiceMAF
 </query>



</hibernate-mapping>
