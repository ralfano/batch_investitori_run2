<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


 <class name="it.ras.arco.batch.bean.FlxAnagraficaCambi" rowid="rowid" table="FLX_MAF_ANAG_CAMBI">
	
	<id name="flxId" column="FLX_ID" type="integer">
		<generator class="sequence">
			<param name="sequence">FLX_MAF_ANAG_CAMBI_SEQ</param>
		</generator>
	</id>

	<!--	*******	CAMPI STRUMENTO FINANZIARIO *******		-->
	<property name="codiceMAF" 			column="CODICE_MAF"	type="string" length="64"  />
	<property name="descrizione" 			column="DESCRIZIONE" 	type="string" length="64"  />
	<property name="valutaIn" 			column="VALUTA_IN" 	type="string" length="64"  />
	<property name="valutaOut" 			column="VALUTA_OUT" 	type="string" length="64"  />



	<!--	*******	CAMPI STANDARD	*******		-->
	<property name="statoElaborazione" 		column="STATO_ELAB_B" 		type="string" length="2"  />
	<property name="istanza" 	   		column="ISTANZA_S" 	 	type="string" length="1"  />
	<property name="dataCaricamento"   		column="DATA_CARICAMENTO_D" 	type="timestamp"  />

  
 </class>
 
 
 <!--	*******		CURSORE		********	-->
 <query name="MAF_ANAG_CAMBI_SQL">
 	from it.ras.arco.batch.bean.FlxAnagraficaCambi flusso where flusso.statoElaborazione ='D'
 </query>


</hibernate-mapping>
