<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 
 <class name="it.ras.arco.batch.bean.FlxGpramSaldiUffSto" rowid="rowid" table="FLX_GPRAM_SALDI_UFF_STO">
  <id name="flxId" column="FLX_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">FLX_GPRAM_SALDI_UFF_STO_SEQ</param>
   </generator>
  </id>
 
<property name="numeroRapporto"                 column="NUMERO_RAPPORTO"                type="string" length="8"  />
<property name="saldoProdotto"                  column="SALDO_PRODOTTO"                 type="double"  />
<property name="dataValorizzazione"             column="DATA_VALORIZZAZIONE"            type="date"  />
<property name="codiceEsternoPortafoglio"       column="CODICE_ESTERNO_PORTAFOGLIO"     type="string" length="15"  />
<property name="statoElab"                      column="STATO_ELAB_B"                   type="string" length="2"  />
<property name="istanza"                        column="ISTANZA_S"                      type="string" length="1"  />
<property name="dataCaricamento"                column="DATA_CARICAMENTO_S"             type="date"  />
 <property name="descrizioneErrore"  column="DESCRIZIONE_ERRORE_S" type="string" length="100"  />
 <property name="dataElab" column="DATA_ELAB_D" type="timestamp"  />
   
 </class>
 <query name="GPRAM_SALDI_UFF_STO">from it.ras.arco.batch.bean.FlxGpramSaldiUffSto m where m.statoElab='D' order by m.numeroRapporto, m.dataValorizzazione</query>
</hibernate-mapping>
