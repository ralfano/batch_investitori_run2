<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
 <!-- TABELLA SOGGETTO XP -->
 <class name="it.ras.arco.batch.bean.FlxSoggettoIndirXP" table="FIN_SOGGETTO_INDIR_XP" where="GSTD_ESIST_B='S'" lazy="true">

<id name="soggettoXpId"                   column="SOGGETTO_XP_ID"                 type="integer"  />
<property name="indirizzoXpId"                  column="INDIRIZZO_XP_ID"                type="integer"  />
<property name="tipoIndirizzo"                  column="TIPO_INDIRIZZO_T"               type="string" length="3"  />
<property name="statoVariaz"                    column="STATO_VARIAZ_T"                 type="string" length="3"  />
<property name="flgDaCanc"                      column="FLG_DA_CANC_B"                  type="string" length="1"  />
<property name="presNote"                       column="PRES_NOTE_B"                    type="string" length="1"  />
<property name="dataInizio"                     column="DATA_INIZIO_D"                  type="date"  />
<property name="dataFine"                       column="DATA_FINE_D"                    type="date"  />
<property name="datiSupl"                       column="DATI_SUPL_S"                    type="string" length="10"  />
<property name="userUltimaModifica"             column="GSTD_ULT_USER_S"                type="string" length="40"  />
<property name="proceduraUltimaModifica"        column="GSTD_ULT_PROC_S"                type="string" length="40"  />
<property name="dataUltimaModifica"             column="GSTD_ULT_MOD_D"                 type="date"  />
<property name="dataInserimento"                column="GSTD_INSE_D"                    type="date"  />
<property name="flagEsistenza"                  column="GSTD_ESIST_B"                   type="string" length="1"  />
<property name="utenteInserimento"              column="GSTD_USER_INS_S"                type="string" length="40"  />
<property name="tipoUltimaModifica"             column="GSTD_TIPO_MOD_B"                type="string" length="1"  />
</class>
<query name="CURSOR_SOGGETTO_INDIR_XP">from it.ras.arco.batch.bean.FlxSoggettoIndirXP p</query>
<query name="GetBySoggIndir">select s from it.ras.arco.batch.bean.FlxSoggettoIndirXP s where s.indirizzoXpId=:indirizzoId</query>

</hibernate-mapping> 