<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <!-- TABELLA ANAGRAFICA AGENZIA -->
 
 <class name="it.ras.arco.bean.DecodTitoliSecIsin" table="DECOD_TITOLI_SEC_ISIN" lazy="true" where="GSTD_ESIST_B='S'">
  <id name="flxId" column="FLX_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">DECOD_TITOLI_SEC_ISIN_SEQ</param>
   </generator>
  </id>  
 
<property name="titoloSec"             column="TITOLOSEC_T"                type="string"   />
 <property name="isin"             column="ISIN_T"                type="string"   />
 <property name="descrTitolo"             column="DESCR_TITOLO_S"                type="string"   />
 </class>
  <query name="GetIsisByCtit"> from it.ras.arco.bean.DecodTitoliSecIsin s where s.titoloSec=?
  </query>

</hibernate-mapping>

