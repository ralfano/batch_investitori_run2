 <query name="GetSoggettoByCodiceEsterno_Fabbrica">select s from it.ras.arco.bean.FinSoggetto s join s.decodNdgFabbr d where d.ndgFab = ? and d.fabbrica = ? </query>
 -->  
</hibernate-mapping>
