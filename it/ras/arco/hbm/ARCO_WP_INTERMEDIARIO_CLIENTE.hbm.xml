<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <!-- TABELLA DEGLI INTERMEDIARI -->
 <class name="@INTERMEDIARIO_CLIENTE.class@" table="WP_INTERMEDIARIO_CLIENTE" where="GSTD_ESIST_B='S'">
  <id name="intermediarioClienteId" column="INTERMEDIARIO_CLIENTE_ID" type="integer">
  </id>

 <!--  <property name="cliGenId"    	                  column="CLI_GEN_ID"                     type="integer" />
  <property name="intermediarioId"                column="INTERMEDIARIO_ID"               type="integer" /> -->

  <!-- Relazione con la tabella WP_CLIENTE_GEN -->	
	<many-to-one name="clientegen" 
	    lazy="@INTERMEDIARIO_CLIENTE-clientegen.lazy@"
		class="@CLIENTE_GEN.class@" 
		column="CLI_GEN_ID"
		update="@INTERMEDIARIO_CLIENTE-clientegen.update@" 
		insert="@INTERMEDIARIO_CLIENTE-clientegen.insert@" 
		cascade="@INTERMEDIARIO_CLIENTE-clientegen.cascade@" 
		not-found="@INTERMEDIARIO_CLIENTE-clientegen.not-found@" 
		fetch="@INTERMEDIARIO_CLIENTE-clientegen.fetch@"
		/>

  <!-- Relazione con la tabella WP_INTERMEDIARI -->	
	<many-to-one name="intermediario" 
	    lazy="@INTERMEDIARIO_CLIENTE-intermediari.lazy@"
		class="@INTERMEDIARI.class@" 
		column="INTERMEDIARIO_ID"
		update="@INTERMEDIARIO_CLIENTE-intermediari.update@" 
		insert="@INTERMEDIARIO_CLIENTE-intermediari.insert@" 
		cascade="@INTERMEDIARIO_CLIENTE-intermediari.cascade@" 
		not-found="@INTERMEDIARIO_CLIENTE-intermediari.not-found@" 
		fetch="@INTERMEDIARIO_CLIENTE-intermediari.fetch@"
		/>


	<!--
	***********************
	  CAMPI STANDARD
	***********************
	-->
	<property name="userUltimaModifica" type="string" column="GSTD_ULT_USER_S" length="40"/>
	<property name="proceduraUltimaModifica" type="string" column="GSTD_ULT_PROC_S" length="40"/>
	<property name="dataUltimaModifica" type="timestamp" column="GSTD_ULT_MOD_D"/>
	<property name="dataInserimento" type="timestamp" column="GSTD_INSE_D"/>
	<property name="flagEsistenza" type="string" column="GSTD_ESIST_B" length="1"/>
	<property name="utenteInserimento" type="string" column="GSTD_USER_INS_S" length="40"/>
	<property name="tipoUltimaModifica" type="string" column="GSTD_TIPO_MOD_B" length="1"/>
	
	<!-- Duplicazione campi standard x Update (SLAVE) -->	
	<property name="userUltimaModificaSlave" type="string" column="GSTD_ULT_USER_S" length="40" insert="false" update="false"/>
	<property name="proceduraUltimaModificaSlave" type="string" column="GSTD_ULT_PROC_S" length="40" insert="false" update="false"/>
	<property name="dataUltimaModificaSlave" type="timestamp" column="GSTD_ULT_MOD_D" insert="false" update="false"/>
	<property name="tipoUltimaModificaSlave" type="string" column="GSTD_TIPO_MOD_B" length="1" insert="false" update="false"/>

	
 </class>
 
</hibernate-mapping>
