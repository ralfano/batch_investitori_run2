<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


 <class name="it.ras.arco.bean.FinPortafoglioFondi" rowid="rowid" table="FIN_PORTAFOGLIO_FONDI">
	
	<id name="portafoglioId" column="PORTAFOGLIO_ID" type="integer">
		<generator class="sequence">
			<param name="sequence">FIN_PORTAFOGLIO_FONDI_SEQ</param>
		</generator>
	</id>


	<!--	*******	CAMPI PROPRI *******		-->
	<property name="dataComposizione" 		column="DATA_D" 	type="timestamp"  />
	<property name="percentualeLiquidita" 		column="PERC_LIQ_C"	type="string" length="64" />
	<property name="percentualeDebito" 		column="PERC_DEBITO_C"	type="string" length="64" />
	<property name="percentualeAzioni" 		column="PERC_AZIONI_C"	type="string" length="64" />
	<property name="percentualeAltro" 		column="PERC_ALTRO_C"	type="string" length="64" />
	<property name="italianEquity" 			column="ITA_EQTY_C"	type="string" length="64" />
	<property name="foreignEquity" 			column="FOREIGN_EQTY_C"	type="string" length="64" />
	<property name="italianBond" 			column="ITA_BOND_C"	type="string" length="64" />
	<property name="foreignBond" 			column="FOREIGN_BOND_C"	type="string" length="64" />
	<property name="convertibleBond" 		column="CONV_BOND_C"	type="string" length="64" />
	<property name="governmentBond" 		column="GOV_BOND_C"	type="string" length="64" />
	<property name="raccoltaNetta" 			column="RACC_NETTA_C"	type="string" length="64" />
	<property name="patrimonioNetto" 		column="PATR_NETTO_C" 	type="string" length="64" />



	<!-- RELAZIONE CON LA FIN_ATT_FIN -->
	<many-to-one name="attivitaFinanziaria" lazy="proxy"
		class="it.ras.arco.bean.FinAttivitaFinanziaria" column="ATTIVITA_FIN_ID"
		update="true" insert="true" cascade="lock" 
		not-found="ignore" fetch="join"
		/>
		
		
		
	<!--
	***********************
	  CAMPI STANDARD
	***********************
	-->
	<property name="userUltimaModifica" type="string" column="GSTD_ULT_USER_S" length="40"/>
	<property name="proceduraUltimaModifica" type="string" column="GSTD_ULT_PROC_S" length="40"/>
	<property name="dataUltimaModifica" type="timestamp" column="GSTD_ULT_MOD_D"/>
	<property name="dataInserimento" type="timestamp" column="GSTD_INSE_D"/>
	<property name="flagEsistenza" type="string" column="GSTD_ESIST_B" length="1"/>
	<property name="utenteInserimento" type="string" column="GSTD_USER_INS_S" length="40"/>
	<property name="tipoUltimaModifica" type="string" column="GSTD_TIPO_MOD_B" length="1"/>
	
	<!-- Duplicazione campi standard x Update (SLAVE) -->	
	<property name="userUltimaModificaSlave" type="string" column="GSTD_ULT_USER_S" length="40" insert="false" update="false"/>
	<property name="proceduraUltimaModificaSlave" type="string" column="GSTD_ULT_PROC_S" length="40" insert="false" update="false"/>
	<property name="dataUltimaModificaSlave" type="timestamp" column="GSTD_ULT_MOD_D" insert="false" update="false"/>
	<property name="tipoUltimaModificaSlave" type="string" column="GSTD_TIPO_MOD_B" length="1" insert="false" update="false"/>


 </class>

</hibernate-mapping>

