<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- TABELLA CONTENENTE LA LISTA DEI PRODOTTI -->
	<class dynamic-update="true" rowid="rowid" 
	    name="@SCP_PRODOTTI.class@"
		table="SCP_PRODOTTI_BCK"
		where="@SCP_PRODOTTI.where@">

		<id name="attivitaFinId" column="ATTIVITA_FIN_ID" type="integer">			
		</id>


	    <property name="descrizione" type="string"
			column="DESCRIZIONE_S" length="100" />
		<property name="descrizioneEmittente" type="string"
			column="DESCRIZIONE_EMITTENTE_S" length="50" />
		<property name="areaProdottoT" type="string"
			column="AREA_T" length="3" />
		<property name="sottoAreaProdottoT" type="string"
			column="SOTTOAREA_T" length="3" />
		<property name="areaTerzoLiv" type="string"
			column="AREA_TERZO_LIV" length="3" />
		
		
		<!-- 
			Campi architetturali	  	
		-->
		<property name="userUltimaModifica" type="string"
			column="GSTD_ULT_USER_S" length="20" />
		<property name="proceduraUltimaModifica" type="string"
			column="GSTD_ULT_PROC_S" length="20" />
		<property name="dataUltimaModifica" type="timestamp"
			column="GSTD_ULT_MOD_D" />
		<property name="dataInserimento" type="timestamp"
			column="GSTD_INSE_D" />
		<property name="flagEsistenza" type="string"
			column="GSTD_ESIST_B" length="1" />
		<property name="utenteInserimento" type="string"
			column="GSTD_USER_INS_S" length="20" />
		<property name="tipoUltimaModifica" type="string"
			column="GSTD_TIPO_MOD_B" length="1" />

		<property name="userUltimaModificaSlave" type="string"
			column="GSTD_ULT_USER_S" length="40" insert="false" update="false" />
		<property name="proceduraUltimaModificaSlave" type="string"
			column="GSTD_ULT_PROC_S" length="40" insert="false" update="false" />
		<property name="dataUltimaModificaSlave" type="timestamp"
			column="GSTD_ULT_MOD_D" insert="false" update="false" />
		<property name="tipoUltimaModificaSlave" type="string"
			column="GSTD_TIPO_MOD_B" length="1" insert="false" update="false" />
		
		<!--
			Campi architetturali fine	  	
		-->
			
		
		<!-- 
			Relazioni con scp_note		
		-->
				
		<set name="prodottoNote" cascade="lock" inverse="true" lazy="true" where ="@SCP_NOTE.where@">
   			<key column="ATTIVITA_FIN_ID"/>
   			<one-to-many class="@SCP_NOTE.class@" not-found="ignore" />
  		</set>		
	</class>
</hibernate-mapping>








