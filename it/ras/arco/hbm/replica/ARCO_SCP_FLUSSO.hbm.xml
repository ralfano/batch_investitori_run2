<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping> 
	<!-- TABELLA DEI FLUSSI DELLA SCP --> 
	<class dynamic-update="true" rowid="rowid" name="@SCP_FLUSSO.class@"
		table="SCP_FLUSSO_BCK" where="@SCP_FLUSSO.where@">

		<id name="flussoId" column="FLUSSO_ID" type="integer">
			<generator class="sequence">
				<param name="sequence">SCP_FLUSSO_SEQ</param>
			</generator>
		</id>
		<property name="scpNumber" type="integer" column="SCP_NUMBER" length="18"/>
		<property name="dettaglioId" type="integer"
			column="DETTAGLIO_ID" length="18" />
		<property name="squadraId" type="integer" column="SQUADRA_ID"
			length="18" />
		<property name="ndgArcoN" type="integer" column="NDG_ARCO_N"
			length="18" />
		<property name="codiceIdentificativoS" type="string"
			column="CODICE_IDENTIFICATIVO_S" length="3" />
		<property name="contrattoId" type="integer"
			column="CONTRATTO_ID" length="18" />
		<property name="soggettoId" type="integer" column="SOGGETTO_ID"
			length="18" />
		<property name="cointestazioneId" type="integer"
			column="COINTESTAZIONE_ID" length="18" />
			<property name="posizioneId" type="integer"
			column="POSIZIONE_ID" length="18" />
		<property name="numContrattoS" type="string"
			column="NUM_CONTRATTO_S" length="25" />
		<property name="dataAperturaD" type="timestamp"
			column="DATA_APERTURA_D" />
		<property name="statoContrattoT" type="string"
			column="STATO_CONTRATTO_T" length="3"/>
		<property name="ordineProdottoN" type="integer"
			column="ORDINE_PRODOTTO_N" length="3"/>
		<property name="tipoProdottoT" type="string"
			column="TIPO_PRODOTTO_T" length="3" />
		<property name="areaProdottoT" type="string"
			column="AREA_PRODOTTO_T" length="3" />
		<property name="sottoAreaProdottoT" type="string"
			column="SOTTOAREA_PRODOTTO_T" length="3" />
		<property name="areaTerzoLiv" type="string"
			column="AREA_TERZO_LIV" length="3" />
		<property name="dataFineComm" type="timestamp"
			column="DATA_FINE_COMM_D" />
		<property name="abiCc" type="string" column="ABI_CC" length="5" />
		<property name="cabCc" type="string" column="CAB_CC" length="5" />
		<property name="numeroContoCcS" type="string"
			column="NUMERO_CONTO_CC_S" length="8" />
		<property name="valoreValutaCc" type="double"
			column="VALORE_VALUTA_CC" length="18" />
		<property name="valoreEuroCc" type="double"
			column="VALORE_EURO_CC" length="18" />
		<property name="ccEstero" type="string"
			column="CC_ESTERO_B" length="1" />
		<property name="sottocodiceRapporto" type="string" 
			column="SOTTOCODICE_RAPPORTO "	length="2" />
		<property name="nomeAssicurato" type="string" 
			column="NOME_ASSICURATO_S "	length="50" />
		<property name="capitaleDifferito" type="double" 
			column="CAPITALE_DIFFERITO_N" length="18" />								
		<property name="divisa" type="string" column="DIVISA"
			length="3" />
		<property name="isinS" type="string" column="ISIN_S"
			length="12" />
		<property name="divisaQuotT" type="string" column="DIVISA_QUOT_T"
			length="3" />
		<property name="codMarket" type="string" column="COD_MARKET"
			length="5" />				
		<property name="numQuote" type="double" column="NUM_QUOTE"
			length="18" />
		<property name="valQuota" type="double" column="VAL_QUOTA"
			length="18" />
		<property name="valEuro" type="double" column="VALORE_EURO"
			length="18" />
		<property name="valoreNominale" type="string"
			column="VALORE_NOMINALE" length="64" />
		<property name="flgQuotato" type="string" column="FLG_QUOTATO"
			length="1" />
		<property name="dataScadenzaPolizza" type="timestamp"
			column="DT_SCADENZA_POLIZZA_D" />
		<property name="sommaPremiPolizzaC" type="double"
			column="SOMMA_PREMI_POLIZZA_C" length="18"/>
		<property name="classeProdottoT" type="string"
			column="CLASSE_PRODOTTO_T" length="20" />
		<property name="descProdottoS" type="string"
			column="DESCR_PRODOTTO_S" length="100" />
		<property name="tipologiaProdottoT" type="string"
			column="TIPOLOGIA_PRODOTTO_T" length="20" />				
		<property name="dataUltimaRataPagata" type="timestamp"
			column="DT_ULTIMA_RATA_PAGATA_D" />
		<property name="ultimaRataPagataC" type="double"
			column="ULTIMA_RATA_PAGATA_C" length="18" />
		<property name="cambioUltimaRataC" type="double"
			column="CAMBIO_ULTIMA_RATA_C" length="18" />
		<property name="dataRiferimentoValuta" type="timestamp"
			column="DT_RIFERIMENTO_VALUTA_D" />
		<property name="renditaMaturataCa" type="double"
			column="RENDITA_MATURATA" length="18" />
		<property name="capitaleMaturatoCa" type="double"
			column="CAPITALE_MATURATO" length="18" />
		<property name="frazionamentoT" type="string"
			column="FRAZIONAMENTO_T" length="50" />
		<property name="flgDas" type="string" column="FLG_DAS"
			length="1" />
		<property name="flgRenditaCapitale" type="string"
			column="FLG_RENDITA_CAPITALE" length="1" />
		<property name="flgPolizzaSingolaS" type="string"
			column="FLG_POLIZZA_SINGOLA_S" length="1" />
		<property name="statoElabB" type="string" column="STATO_ELAB_B"
			length="2" />
		<property name="dataEstrazione" type="timestamp"
			column="DATA_ESTRAZIONE_D" />
		<!-- 
			Campi architetturali	  	
		-->
		<property name="userUltimaModifica" type="string"
			column="GSTD_ULT_USER_S" length="20" />
		<property name="proceduraUltimaModifica" type="string"
			column="GSTD_ULT_PROC_S" length="20" />
		<property name="dataUltimaModifica" type="timestamp"
			column="GSTD_ULT_MOD_D" />
		<property name="dataInserimento" type="timestamp"
			column="GSTD_INSE_D" />
		<property name="flagEsistenza" type="string"
			column="GSTD_ESIST_B" length="1" />
		<property name="utenteInserimento" type="string"
			column="GSTD_USER_INS_S" length="20" />
		<property name="tipoUltimaModifica" type="string"
			column="GSTD_TIPO_MOD_B" length="1" />

		<property name="userUltimaModificaSlave" type="string"
			column="GSTD_ULT_USER_S" length="40" insert="false" update="false" />
		<property name="proceduraUltimaModificaSlave" type="string"
			column="GSTD_ULT_PROC_S" length="40" insert="false" update="false" />
		<property name="dataUltimaModificaSlave" type="timestamp"
			column="GSTD_ULT_MOD_D" insert="false" update="false" />
		<property name="tipoUltimaModificaSlave" type="string"
			column="GSTD_TIPO_MOD_B" length="1" insert="false" update="false" />
		
		<many-to-one name="elenco" class="@SCP_ELENCO.class@" 
		column="ELENCO_ID" not-null="true" insert="true" lazy="proxy" 
		update="true" cascade="lock" />
	</class>
</hibernate-mapping>








