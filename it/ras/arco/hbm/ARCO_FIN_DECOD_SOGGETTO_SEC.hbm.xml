<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <!-- TABELLA DECODIFICA SOGGETTI SEC -->
<class name="it.ras.arco.bean.FinDecodSoggettoSec"
  table="FIN_DECOD_SOGGETTO_SEC" where="GSTD_ESIST_B='S'">
  <id name="soggettoSecId" column="SOGGETTO_SEC_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">FIN_DECOD_SOGGETTO_SEC_SEQ</param>
   </generator>
  </id>
 	<property name="soggettoId"                     column="SOGGETTO_ID"                    type="integer"  />
	<property name="ndgSec"                         column="NDG_SEC"                        type="integer"  />
	<property name="ndgFabbrica"                    column="NDG_FABBRICA"                   type="string" length="25"  />
	<property name="codCsot"                        column="COD_CSOT"                        type="string" length="11"  />
	<property name="codiceFabbricaCorr"             column="CODICE_FABBRICA_CORR"           type="string" length="5"  />
	<property name="userUltimaModifica"             column="GSTD_ULT_USER_S"                type="string" length="40"  />
	<property name="proceduraUltimaModifica"        column="GSTD_ULT_PROC_S"                type="string" length="40"  />
	<property name="dataUltimaModifica"             column="GSTD_ULT_MOD_D"                 type="date"  />
	<property name="dataInserimento"                column="GSTD_INSE_D"                    type="date"  />
	<property name="flagEsistenza"                  column="GSTD_ESIST_B"                   type="string" length="1"  />
	<property name="utenteInserimento"              column="GSTD_USER_INS_S"                type="string" length="40"  />
	<property name="tipoUltimaModifica"             column="GSTD_TIPO_MOD_B"                type="string" length="1"  />
	<property name="cointestazione"                 column="COINTESTAZIONE"                 type="string" length="1"  />
	<property name="crap"                           column="CRAP"                            type="string" length="13"  />
  <property name="userUltimaModificaSlave" type="string" column="GSTD_ULT_USER_S" length="40" insert="false" update="false"/>
  <property name="proceduraUltimaModificaSlave" type="string" column="GSTD_ULT_PROC_S" length="40" insert="false" update="false"/>
  <property name="dataUltimaModificaSlave" type="timestamp" column="GSTD_ULT_MOD_D" insert="false" update="false"/>
  <property name="tipoUltimaModificaSlave" type="string" column="GSTD_TIPO_MOD_B" length="1" insert="false" update="false"/>
  
 </class>
 <query name="getSoggettoSec">select s from it.ras.arco.bean.FinDecodSoggettoSec s where s.crap = :rapporto and s.codCsot = :csot</query>
 
 <query name="getSoggettoSecByCsotCodFabrRapp">select s from it.ras.arco.bean.FinDecodSoggettoSec s 
 where s.crap = :rapporto and  s.codCsot = :csot  and s.codiceFabbricaCorr = :codiceFabbrica</query>
 
 <query name="GetSoggettoSecBySoggettoId">select s from it.ras.arco.bean.FinDecodSoggettoSec s where s.soggettoId = ? and s.codiceFabbricaCorr = ? and s.ndgFabbrica = ?</query>
</hibernate-mapping>

