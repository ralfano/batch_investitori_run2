<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="it.ras.arco.bean.FinValuteUic" table="FIN_VALUTE_UIC">
  <id name="valutaId" column="VALUTA_ID" type="string" length="10">
   <generator class="sequence">
    <param name="sequence">FIN_VALUTA_UIC_SEQ</param>
   </generator>
  </id>
<property name="flagEsistenza"                  column="GSTD_ESIST_B"                   type="string" length="2"  />
<property name="gstdUserCli"                    column="GSTD_USER_CLI_S"                type="string" length="38"  />
<property name="gstdUserOpe"                    column="GSTD_USER_OPE_S"                type="string" length="38"  />
<property name="gstdProc"                       column="GSTD_PROC_S"                    type="string" length="50"  />
<property name="gstdTipomod"                    column="GSTD_TIPOMOD_B"                 type="string" length="1" />
<property name="codiceIso"                      column="CODICE_ISO_S"                   type="string" length="3"  />
<property name="gstdUltmod"                     column="GSTD_ULTMOD_D"                  type="date"  />
<property name="descrizione"                    column="DESCRIZIONE_S"                  type="string" length="255"  />
<property name="codiceUic"                      column="CODICE_UIC_S"                   type="string" length="3"  />
</class>
 
 <query name="GetValutaByCodIso">from it.ras.arco.bean.FinValuteUic o where o.codiceIso = ?    </query> 
 <query name="GetValutaByCodUic">from it.ras.arco.bean.FinValuteUic o where o.codiceUic = ?    </query> 
 
</hibernate-mapping>
