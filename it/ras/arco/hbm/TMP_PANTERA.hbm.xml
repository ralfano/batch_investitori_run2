<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="it.ras.arco.bean.TmpPantera" rowid="rowid" table="TMP_PANTERA">

<id name="recordId" column="RECORD_ID" type="integer">
<generator class="sequence">
<param name="sequence">TMP_PANTERA_SEQ</param>
</generator>
</id>

<property name="rappContId"           column="RAPP_CONT_ID"           type="string"    />
<property name="tipoRecord"           column="TIPO_RECORD"            type="string"    />
<property name="versione"             column="VERSIONE"               type="string"    />
<property name="tipoOperazione"       column="TIPO_OPERAZIONE"        type="string"    />
<property name="flagInviato"          column="FLAG_INVIATO"           type="string"    />
<property name="codPrcProd"           column="COD_PRC_PROD"           type="string"    />          
<property name="codOper"              column="COD_OPER"               type="string"    />              
<property name="complAnag"            column="COMPL_ANAG"             type="string"    />            
<property name="tipoAnagrafica"       column="TIPO_ANAGRAFICA"        type="string"    />       
<property name="codiceSottoscrizione" column="CODICE_SOTTOSCRIZIONE"  type="string"    /> 
<property name="ndgArco"              column="NDG_ARCO"               type="string"    />              
<property name="tipoEvento"           column="TIPO_EVENTO"            type="string"    />           
<property name="tipoPersona"          column="TIPO_PERSONA"           type="string"    />          
<property name="denominazione"        column="DENOMINAZIONE"          type="string"    />         
<property name="resNazione"           column="RES_NAZIONE"            type="string"    />           
<property name="resCodComune"         column="RES_COD_COMUNE"         type="string"    />        
<property name="resDesComune"         column="RES_DES_COMUNE"         type="string"    />        
<property name="resIndirizzo"         column="RES_INDIRIZZO"          type="string"    />         
<property name="resCap"               column="RES_CAP"                type="string"    />               
<property name="codFiscale"           column="COD_FISCALE"            type="string"    />           
<property name="nasComune"            column="NAS_COMUNE"             type="string"    />            
<property name="rae"                  column="RAE"                    type="string"    />                   
<property name="sae"                  column="SAE"                    type="string"    />                   
<property name="docTipo"              column="DOC_TIPO"               type="string"    />              
<property name="docNum"               column="DOC_NUM"                type="string"    />               
<property name="docAutoritaRil"       column="DOC_AUTORITA_RIL"       type="string"    />      
<property name="sesso"                column="SESSO"                  type="string"    />                 
<property name="movcausaleUic"        column="MOV_CAUSALE_UIC"        type="string"    />       
<property name="movSegno"             column="MOV_SEGNO"              type="string"    />             
<property name="movConnessione"       column="MOV_CONNESSIONE"        type="string"    />       
<property name="contatoreInvio"       column="CONTATORE_INVIO"        type="integer"   />
<property name="progressivoInvio"     column="PROGRESSIVO_INVIO"      type="integer"   />
<property name="prdAttivitaFin"       column="PRD_ATTIVITA_FIN"       type="integer"   />
<property name="prdProdotto"          column="PRD_PRODOTTO"           type="integer"   />
<property name="prdEmittente"         column="PRD_EMITTENTE"          type="integer"   />
<property name="movImporto"           column="MOV_IMPORTO"            type="double"    />
<property name="dataInvio"            column="DATA_INVIO"             type="timestamp" />
<property name="dataRapporto"         column="DATA_RAPPORTO"          type="date" />
<property name="nasData"              column="NAS_DATA"               type="date" />
<property name="docDataRilascio"      column="DOC_DATA_RILASCIO"      type="date" />
<property name="resProv"      		  column="RES_SIGLA_PROV"      type="string" />




</class>


 <query name="GetTempPanteraOperazioni"> from  it.ras.arco.bean.TmpPantera p where p.flagInviato='N' and p.tipoOperazione='OP' order by p.progressivoInvio, p.tipoRecord</query>
 <query name="GetTempPanteraRapporti"> from  it.ras.arco.bean.TmpPantera p where p.flagInviato='N' and p.tipoOperazione!='OP' order by p.progressivoInvio, p.tipoRecord</query>


</hibernate-mapping>

