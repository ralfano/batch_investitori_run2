<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <!-- TABELLA DEI CLIENTI GEN -->
 <class name="@CLIENTE_GEN.class@" table="WP_CLIENTE_GEN" where="GSTD_ESIST_B='S'">
  <id name="cliGenId" column="CLI_GEN_ID" type="integer">
  </id>

  <property name="promotoreId"                column="PROMOTORE_ID"               type="integer" />
  <property name="soggettoId"                 column="SOGGETTO_ID"                type="integer" />
  <property name="prospectId"                 column="PROSPECT_ID"                type="integer" />

  <!-- Relazione con la tabella WP_INTERMEDIARIO_CLIENTE -->	
	<set name="intermediariocliente" 
		 cascade="@CLIENTE_GEN-intermediariocliente.cascade@" 
		 inverse="@CLIENTE_GEN-intermediariocliente.inverse@" 
		 where ="GSTD_ESIST_B='S'">
		
		<key column="CLI_GEN_ID"/>
		<one-to-many class="@INTERMEDIARIO_CLIENTE.class@" not-found="@CLIENTE_GEN-intermediariocliente.not-found@" />
	</set>
	
	<!-- Relazione con la tabella WP_CONTRATTO_TERZI -->	
	<set name="contrattoterzi" 
		 cascade="@CLIENTE_GEN-contrattoterzi.cascade@" 
		 inverse="@CLIENTE_GEN-contrattoterzi.inverse@" 
		 where ="GSTD_ESIST_B='S'">
		
		<key column="CLI_GEN_ID"/>
		<one-to-many class="@CONTRATTO_TERZI.class@" not-found="@CLIENTE_GEN-contrattoterzi.not-found@" />
	</set>
	
	<!-- Relazione con la tabella WP_NUCLEO -->	
	<set name="nucleo" 
		 cascade="@CLIENTE_GEN-nucleo.cascade@" 
		 inverse="@CLIENTE_GEN-nucleo.inverse@" 
		 where ="GSTD_ESIST_B='S'">
		
		<key column="CLI_GEN_ID"/>
		<one-to-many class="it.ras.arco.bean.FinNucleo" not-found="@NUCLEO.not-found@" />
	</set>
	
	<!-- Relazione con la tabella FIN_PROMOTORE -->	
	<many-to-one 
	    name="finpromotore" 
	    lazy="@CLIENTE_GEN-finpromotore.lazy@"
		class="it.ras.arco.bean.FinPromotore" 
		column="PROMOTORE_ID"
		update="@CLIENTE_GEN-finpromotore.update@" 
		insert="@CLIENTE_GEN-finpromotore.insert@" 
		cascade="@CLIENTE_GEN-finpromotore.cascade@" 
		not-found="@CLIENTE_GEN-finpromotore.not-found@" 
		fetch="@CLIENTE_GEN-finpromotore.fetch@"
		/>

	<!-- Relazione con la tabella FIN_SOGGETTO -->	
	<many-to-one name="finsoggetto" 
	    lazy="@CLIENTE_GEN-finsoggetto.lazy@"
		class="it.ras.arco.bean.FinSoggetto" 
		column="SOGGETTO_ID"
		update="@CLIENTE_GEN-finsoggetto.update@" 
		insert="@CLIENTE_GEN-finsoggetto.insert@" 
		cascade="@CLIENTE_GEN-finsoggetto.cascade@" 
		not-found="@CLIENTE_GEN-finsoggetto.not-found@" 
		fetch="@CLIENTE_GEN-finsoggetto.fetch@"
		/>
		
	<!--
	***********************
	  CAMPI STANDARD
	***********************
	-->
	<property name="userUltimaModifica" type="string" column="GSTD_ULT_USER_S" length="40"/>
	<property name="proceduraUltimaModifica" type="string" column="GSTD_ULT_PROC_S" length="40"/>
	<property name="dataUltimaModifica" type="timestamp" column="GSTD_ULT_MOD_D"/>
	<property name="dataInserimento" type="timestamp" column="GSTD_INSE_D"/>
	<property name="flagEsistenza" type="string" column="GSTD_ESIST_B" length="1"/>
	<property name="utenteInserimento" type="string" column="GSTD_USER_INS_S" length="40"/>
	<property name="tipoUltimaModifica" type="string" column="GSTD_TIPO_MOD_B" length="1"/>
	
	<!-- Duplicazione campi standard x Update (SLAVE) -->	
	<property name="userUltimaModificaSlave" type="string" column="GSTD_ULT_USER_S" length="40" insert="false" update="false"/>
	<property name="proceduraUltimaModificaSlave" type="string" column="GSTD_ULT_PROC_S" length="40" insert="false" update="false"/>
	<property name="dataUltimaModificaSlave" type="timestamp" column="GSTD_ULT_MOD_D" insert="false" update="false"/>
	<property name="tipoUltimaModificaSlave" type="string" column="GSTD_TIPO_MOD_B" length="1" insert="false" update="false"/>

	
 </class>
 
</hibernate-mapping>
