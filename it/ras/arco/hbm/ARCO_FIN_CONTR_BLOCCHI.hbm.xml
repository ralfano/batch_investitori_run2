<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <!-- TABELLA DEI CONTRATTI  -->
 <class name="it.ras.arco.bean.FinContrBlocchi" table="FIN_CONTR_BLOCCHI"
 		where="GSTD_ESIST_B='S' and FINE_VALIDITA_D >= SYSDATE">
  <id name="contrBlocchiId" column="FIN_CONTR_BLOCCHI_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">FIN_CONTR_BLOCCHI_SEQ</param>
   </generator>
  </id>
 
 
  <property name="inizioValidita" type="timestamp" column="INIZIO_VALIDITA_D" />
  <property name="fineValidita" type="timestamp" column="FINE_VALIDITA_D" />
  
  <property name="attFinId" type="integer" column="ATTIVITA_FIN_ID"/>
  <property name="tipoOpeBloccata" type="string" column="TIPO_OPERAZIONE_BLOCCATA_B"/>
  <property name="statoB" type="string" column="STATO_B"/>
  <property name="dataRicezioneBlocco" type="date" column="DATA_RICEZIONE_BLOCCO_D" length="8"/>
  <property name="causaleT" type="string" column="CAUSALE_T" length="1"/>  
  <property name="quotebloccate" type="double" column="QUOTE_BLOCCATE_F"/>
  <property name="tipoBloccoT" type="string" column="TIPO_BLOCCO_T"/>
  <property name="numCertificato" type="string" column="NUM_CERTIFICATO_S" length="10"/>
  <property name="desc" type="string" column="DESC_S" length="3"/>
  <property name="descSgr" type="string" column="DESC_SGR_S" length="3"/>
  <property name="userUltimaModifica" type="string" column="GSTD_ULT_USER_S" length="20"/>
  <property name="proceduraUltimaModifica" type="string" column="GSTD_ULT_PROC_S" length="20"/>
  <property name="dataUltimaModifica" type="timestamp" column="GSTD_ULT_MOD_D"/>
  <property name="dataInserimento" type="timestamp" column="GSTD_INSE_D"/>
  <property name="flagEsistenza" type="string" column="GSTD_ESIST_B" length="1"/>
  <property name="utenteInserimento" type="string" column="GSTD_USER_INS_S" length="20"/>
  <property name="tipoUltimaModifica" type="string" column="GSTD_TIPO_MOD_B" length="1"/>

  <property name="userUltimaModificaSlave" type="string" column="GSTD_ULT_USER_S" length="40" insert="false" update="false"/>
  <property name="proceduraUltimaModificaSlave" type="string" column="GSTD_ULT_PROC_S" length="40" insert="false" update="false"/>
  <property name="dataUltimaModificaSlave" type="timestamp" column="GSTD_ULT_MOD_D" insert="false" update="false"/>
  <property name="tipoUltimaModificaSlave" type="string" column="GSTD_TIPO_MOD_B" length="1" insert="false" update="false"/>
 
  <many-to-one 	name="posizione" class="it.ras.arco.bean.FinPosizione" 
  							column="POSIZIONE_ID" not-null="true" 
  							cascade="lock" not-found="ignore"/>
  							
  <many-to-one name="contratto" class="it.ras.arco.bean.FinContratto" column="CONTRATTO_ID" not-null="true" cascade="lock" not-found="ignore"/> 
  

 </class>
 
 <query name="GET_BLOCCHI_BY_POSIZIONE_ID">
 from it.ras.arco.bean.FinContrBlocchi s where s.posizione.posizioneId = ? and (s.statoB = 'A' or s.statoB = 'A ' or s.statoB = ' A')
 order by s.statoB asc
 </query>
</hibernate-mapping>
