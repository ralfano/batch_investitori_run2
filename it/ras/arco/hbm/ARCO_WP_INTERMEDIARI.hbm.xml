<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


 <class name="@INTERMEDIARI.class@" rowid="rowid" table="WP_INTERMEDIARI" where="GSTD_ESIST_B = 'S'">
	
	<id name="intermediarioId" column="INTERMEDIARIO_ID" type="integer"/>
		
	


	<!--	*******	CAMPI PROPRI *******		-->
	<property name="nome"	column="NOME_S"		type="string" length="255"  />
	



	<!-- RELAZIONE CON LA WP_TIPO_INTERMEDIARIO -->
		
	<many-to-one name="intermediario" lazy="proxy"
		class="@TIPO_INTERMEDIARIO.class@" column="TIPO_INTERMEDIARIO_ID"
		update="@INTERMEDIARI-intermediario.update@" insert="@INTERMEDIARI-intermediario.insert@" 
		cascade="@INTERMEDIARI-intermediario.cascade@" 
		not-found="@INTERMEDIARI-intermediario.not-found@" fetch="@INTERMEDIARI-intermediario.fetch@"
		/>

	<!-- RELAZIONE CON LA WP_CONTRATTO_TERZI -->
 	<set name="contrattoTerzi" 
		cascade="@INTERMEDIARI-contrattoTerzi.cascade@" 
		inverse="@INTERMEDIARI-contrattoTerzi.inverse@" 
		where ="@INTERMEDIARI-contrattoTerzi.where@">
		
		<key column="INTERMEDIARIO_ID"/>
		<one-to-many class="@CONTRATTO_TERZI.class@" not-found="@INTERMEDIARI-contrattoTerzi.not-found@" />
	</set>
	<!-- RELAZIONE CON LA WP_INTERMEDIARIO_CLIENTE -->
 	<set name="intermediarioCliente" 
		cascade="@INTERMEDIARI-intermediarioCliente.cascade@" 
		inverse="@INTERMEDIARI-intermediarioCliente.inverse@" 
		where ="@INTERMEDIARI-intermediarioCliente.where@">
		
		<key column="INTERMEDIARIO_ID"/>
		<one-to-many class="@INTERMEDIARIO_CLIENTE.class@" not-found="@INTERMEDIARI-contrattoTerzi.not-found@" />
	</set>

	<!--
	***********************
	  CAMPI STANDARD
	***********************
	-->
	<property name="userUltimaModifica" type="string" column="GSTD_ULT_USER_S" length="40"/>
	<property name="proceduraUltimaModifica" type="string" column="GSTD_ULT_PROC_S" length="40"/>
	<property name="dataUltimaModifica" type="timestamp" column="GSTD_ULT_MOD_D"/>
	<property name="dataInserimento" type="timestamp" column="GSTD_INSE_D"/>
	<property name="flagEsistenza" type="string" column="GSTD_ESIST_B" length="1"/>
	<property name="utenteInserimento" type="string" column="GSTD_USER_INS_S" length="40"/>
	<property name="tipoUltimaModifica" type="string" column="GSTD_TIPO_MOD_B" length="1"/>
	
	<!-- Duplicazione campi standard x Update (SLAVE) -->	
	<property name="userUltimaModificaSlave" type="string" column="GSTD_ULT_USER_S" length="40" insert="false" update="false"/>
	<property name="proceduraUltimaModificaSlave" type="string" column="GSTD_ULT_PROC_S" length="40" insert="false" update="false"/>
	<property name="dataUltimaModificaSlave" type="timestamp" column="GSTD_ULT_MOD_D" insert="false" update="false"/>
	<property name="tipoUltimaModificaSlave" type="string" column="GSTD_TIPO_MOD_B" length="1" insert="false" update="false"/>



 </class>
 
  

</hibernate-mapping>

