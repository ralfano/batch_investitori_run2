<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <!-- TABELLA PRODOTTO  -->
 <class name="it.ras.arco.bean.FinProdotto" table="FIN_PRODOTTO" 
 	where="GSTD_ESIST_B='S'" 
 	select-before-update="true" optimistic-lock="dirty" dynamic-update="true">
 	
 	
  <id name="prodottoID" column="PRODOTTO_ID" type="integer">
   <generator class="sequence">
    <param name="sequence">FIN_PRODOTTO_SEQ</param>
   </generator>
  </id>


  
  <property name="codiceProdottoExt" type="string" column="COD_PRODOTTO_EXT_S" length="20"/>
  <property name="tipo" type="string" column="TIPO_T" length="3"/>
  <property name="areaMO" type="string" column="AREA_MO_T" length="2"/>
  <property name="area" type="string" column="AREA_T" length="3"/>
  <property name="sottoareaT" type="string" column="SOTTOAREA_T" length="3"/>
  <property name="descrizioneS" type="string" column="DESCRIZIONE_S" length="100"/>
  <property name="visibilitaCP" type="string" column="VISIBILITA_CP" length="1"/>
  <property name="ricercaSingola" type="string" column="RICERCA_SINGOLA" length="1"/> 
  <property name="gestioneArco" type="string" column="GEST_ARCO_FLAG" length="1" />
  <property name="parametroFep" type="string" column="AREA_TERZO_LIV" length="3" />
  
  
  
  <!-- RELAZIONE CON LA FIN_EMITTENTE -->
  <many-to-one name="emittente" lazy="false"
   	class="it.ras.arco.bean.FinEmittente" column="EMITTENTE_ID"
   	update="true" insert="true" cascade="lock" 
   	not-found="ignore" fetch="join"
   	/>

	<!-- RELAZIONE PER DIP INDIRIZZI -->
  <many-to-one name="accorpamento" class="it.ras.arco.bean.FinAccorpamento" 
  	column="ACCORPAMENTO_ID" not-null="true" lazy="proxy" not-found="ignore" cascade="none,lock" />   
  



  <!-- RELAZIONE CON FIN_PRODOTTO_LINEA (nuova versione) -->
  <set 	name="attFin" cascade="save-update,lock" 
  	outer-join="false"
  	where="GSTD_ESIST_B='S'"
	inverse="true"
  	>
   <key column="PRODOTTO_ID"/>
   <one-to-many class="it.ras.arco.bean.FinProdottoLinea" not-found="ignore" />
  </set>


